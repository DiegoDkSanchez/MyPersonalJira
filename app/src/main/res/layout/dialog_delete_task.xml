<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#00000000"
        android:backgroundTint="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <FrameLayout
            android:id="@+id/backBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_245sdp"/>

    <androidx.cardview.widget.CardView
            android:layout_below="@id/backBox"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/deleteTaskButton"
                android:background="@color/red"
                android:textColor="@color/white"
                android:padding="@dimen/_10sdp"
                android:text="@string/delete"
                android:fontFamily="@font/nunito_sans_bold"
                android:textAllCaps="false"
                android:textSize="@dimen/_20sdp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_8sdp"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:background="@color/blackBlue"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp">
            <com.airbnb.lottie.LottieAnimationView
                    android:visibility="visible"
                    android:id="@+id/animation_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:scaleType="centerCrop"
                    app:lottie_fileName="delete_animation.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />
            <TextView
                    android:text="@string/you_are_sure_delete_task"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_30sdp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/nunito_sans_light"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>