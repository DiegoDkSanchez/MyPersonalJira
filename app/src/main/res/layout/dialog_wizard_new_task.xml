<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
            android:id="@+id/backBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_345sdp"/>

    <androidx.cardview.widget.CardView
            android:layout_below="@id/backBox"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/addTaskDialogFragment"
                android:background="@color/green"
                android:textColor="@color/white"
                android:padding="@dimen/_10sdp"
                android:text="@string/add"
                android:fontFamily="@font/nunito_sans_bold"
                android:textAllCaps="false"
                android:textSize="@dimen/_20sdp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_8sdp"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_350sdp">
            <com.airbnb.lottie.LottieAnimationView
                    android:visibility="visible"
                    android:id="@+id/backgroundCube"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:lottie_fileName="background_cube.json"
                    app:lottie_loop="false"
                    app:lottie_autoPlay="false" />
            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPagerDialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <com.example.taskcontrol.Control.TabCircleSelector
                    android:id="@+id/selector"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>